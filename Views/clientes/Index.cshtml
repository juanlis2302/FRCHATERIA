@model IEnumerable<ferre2.Models.clientes>

@{
    ViewBag.Title = "Clientes";
}

<div class="main-container">

    <div class="productos-wrapper">

        <!-- HEADER -->
        <div class="productos-header-nuevo">
            <h2 class="header-title">Clientes</h2>

            @Html.ActionLink(
                "➕ Nuevo Cliente",
                "Create",
                null,
                new { @class = "btn btn-ferreteria" }
            )
        </div>

        <!-- GRID DE CLIENTES -->
        <div class="productos-grid-nuevo">

            @foreach (var item in Model)
            {
                <div class="card-producto-nuevo">

                    <h3>@item.nombre_razon_social</h3>

                    <div class="producto-info-nuevo">
                        <div><label>ID:</label> @item.id_cliente</div>
                        <div><label>Tipo Doc:</label> @item.tipo_documento</div>
                        <div><label>Número Doc:</label> @item.numero_documento</div>
                        <div><label>Dirección:</label> @item.direccion</div>
                        <div><label>Teléfono:</label> @item.telefono</div>
                        <div><label>Email:</label> @item.email</div>
                        <div><label>Ciudad:</label> @item.ciudad</div>
                        <div><label>Departamento:</label> @item.departamento</div>
                        <div><label>Registro:</label> @item.fecha_registro</div>
                        <div>
                            <label>Estado:</label>
                            <span class="badge bg-success">@item.estado</span>
                        </div>
                    </div>

                    <div class="card-buttons-nuevo">
                        <a href="@Url.Action("Edit", new { id = item.id_cliente })"
                           class="btn btn-ferreteria btn-edit-nuevo">✏️ Editar</a>

                        <a href="@Url.Action("Details", new { id = item.id_cliente })"
                           class="btn btn-outline-ferreteria btn-view-nuevo">👁️ Ver</a>

                        <a href="@Url.Action("Delete", new { id = item.id_cliente })"
                           class="btn btn-danger btn-delete-nuevo">🗑️ Eliminar</a>
                    </div>

                </div>
            }

        </div>

    </div>

</div>
