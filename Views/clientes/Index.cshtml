@model IEnumerable<ferre2.Models.clientes>

@{
    ViewBag.Title = "Clientes";
}

<div class="productos-header-nuevo">
    <div class="header-title">
        <h2>Clientes</h2>
    </div>

    @Html.ActionLink(
             "+ Nuevo Cliente",
             "Create",
             null,
             new { @class = "btn-ferreteria", @style = "background-color: #f39c12; color: #1a365d; font-weight: bold; border-radius: 10px; padding: 10px 20px; text-decoration: none;" }
         )
</div>

<div class="productos-grid-nuevo">
    @foreach (var item in Model)
    {
        <div class="card-producto-nuevo player-card">
            <div class="player-header">
                <div class="player-avatar">
                    <span style="z-index: 2;">@item.nombre_razon_social.Substring(0, 1).ToUpper()</span>

                    <div class="player-level">Id @item.id_cliente</div>
                </div>
                <h3>@item.nombre_razon_social</h3>
                <span class="badge @(item.estado == "Activo" ? "bg-success" : "bg-danger")">@item.estado</span>
            </div>

            <div class="producto-info-nuevo player-stats">
                <div class="stat-row">
                    <span class="stat-label">📜 DOC:</span>
                    <span class="stat-value">@item.tipo_documento @item.numero_documento</span>
                </div>
                <div class="stat-row">
                    <span class="stat-label">📍 UBICACIÓN:</span>
                    <span class="stat-value">@item.ciudad, @item.departamento</span>
                </div>
                <div class="stat-row">
                    <span class="stat-label">📞 CONTACTO:</span>
                    <span class="stat-value">@item.telefono</span>
                </div>
                <div class="stat-row email-stat">
                    <span class="stat-value">@item.email</span>
                </div>
            </div>

            <div class="card-buttons-nuevo">
                <a href="@Url.Action("Edit", new { id = item.id_cliente })" class="btn-action edit">✏️</a>
                <a href="@Url.Action("Details", new { id = item.id_cliente })" class="btn-action view">👁️</a>
                <a href="@Url.Action("Delete", new { id = item.id_cliente })" class="btn-action delete">🗑️</a>
            </div>
        </div>
    }
</div>