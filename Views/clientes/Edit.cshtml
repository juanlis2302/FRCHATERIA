@model ferre2.Models.clientes

@{
    ViewBag.Title = "Editar Cliente";
}

<div class="main-container">

    <div class="table-card">

        <!-- HEADER -->
        <div class="section-header">
            <div class="header-title">
                <h2>Editar Cliente</h2>
            </div>

            @Html.ActionLink("← Volver", "Index", null, new { @class = "btn btn-outline-secondary" })
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.id_cliente)

            <div class="p-4">

                <div class="row g-3">

                    <div class="col-md-6">
                        <label class="form-label">Nombre / Razón Social</label>
                        @Html.TextBoxFor(m => m.nombre_razon_social, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.nombre_razon_social, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Tipo Documento</label>
                        @Html.TextBoxFor(m => m.tipo_documento, new { @class = "form-control" })
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Número</label>
                        @Html.TextBoxFor(m => m.numero_documento, new { @class = "form-control" })
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Dirección</label>
                        @Html.TextBoxFor(m => m.direccion, new { @class = "form-control" })
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Teléfono</label>
                        @Html.TextBoxFor(m => m.telefono, new { @class = "form-control" })
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Email</label>
                        @Html.TextBoxFor(m => m.email, new { @class = "form-control", type = "email" })
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Ciudad</label>
                        @Html.TextBoxFor(m => m.ciudad, new { @class = "form-control" })
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Departamento</label>
                        @Html.TextBoxFor(m => m.departamento, new { @class = "form-control" })
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Fecha Registro</label>
                        @Html.TextBoxFor(m => m.fecha_registro, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Estado</label>
                        @Html.DropDownListFor(m => m.estado,
                            new SelectList(new[] { "Activo", "Inactivo" }),
                            new { @class = "form-control" })
                    </div>

                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-ferreteria">
                        💾 Guardar cambios
                    </button>
                </div>

            </div>
        }

    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
