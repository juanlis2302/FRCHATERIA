@model ferre2.Models.clientes

@{
    ViewBag.Title = "Delete";
}

<div class="main-container">

    <div class="table-card">

        <!-- HEADER -->
        <div class="section-header">
            <div class="header-title">
                <h2>Eliminar Cliente</h2>
            </div>
            <div>
                @Html.ActionLink("← Volver", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>

        <!-- DETALLES -->
        <div class="card-content p-4">

            <div class="detalle-item">
                <span class="detalle-label">Nombre / Razón Social:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.nombre_razon_social)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Tipo Documento:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.tipo_documento)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Número Documento:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.numero_documento)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Dirección:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.direccion)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Teléfono:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.telefono)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Email:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.email)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Ciudad:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.ciudad)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Departamento:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.departamento)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Fecha de Registro:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.fecha_registro)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Estado:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.estado)</span>
            </div>

        </div>

        <!-- ACCIONES -->
        <div class="card-actions p-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a href="Index" class="btn btn-outline-ferreteria">Cancelar</a>
            }
        </div>

    </div>

</div>
