@model ferre2.Models.clientes

@{
    ViewBag.Title = "Details";
}

<div class="main-container">

    <div class="table-card">

        <!-- HEADER -->
        <div class="section-header">
            <div class="header-title">
                <h2>Detalles del Cliente</h2>
            </div>
            <div>
                @Html.ActionLink("✏ Editar", "Edit", new { id = @Model.id_cliente }, new { @class = "btn btn-sm btn-outline-secondary" })
                @Html.ActionLink("← Volver", "Index", null, new { @class = "btn btn-outline-secondary" })

            </div>
        </div>
        
        <!-- DETALLES -->
        <div class="card-content p-4">

            <div class="detalle-item">
                <span class="detalle-label">Nombre / Razón Social:</span>
                <span class="detalle-value">@Model.nombre_razon_social</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Tipo Documento:</span>
                <span class="detalle-value">@Model.tipo_documento</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Número Documento:</span>
                <span class="detalle-value">@Model.numero_documento</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Dirección:</span>
                <span class="detalle-value">@Model.direccion</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Teléfono:</span>
                <span class="detalle-value">@Model.telefono</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Email:</span>
                <span class="detalle-value">@Model.email</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Ciudad:</span>
                <span class="detalle-value">@Model.ciudad</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Departamento:</span>
                <span class="detalle-value">@Model.departamento</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Fecha de Registro:</span>
                <span class="detalle-value">@Model.fecha_registro</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Estado:</span>
                <span class="detalle-value">@Model.estado</span>
            </div>

        </div>

    </div>

</div>
