@model ferre2.Models.productos

@{
    ViewBag.Title = "Delete";
}

<div class="main-container">

    <div class="table-card">

        <!-- HEADER -->
        <div class="section-header">
            <div class="header-title">
                <h2>Eliminar Producto</h2>
            </div>
            <div>
                @Html.ActionLink("← Volver", "Index", null, new { @class = "btn btn-outline-ferreteria" })

            </div>
        </div>

        <!-- DETALLES -->
        <div class="card-content p-4">

            <div class="detalle-item">
                <span class="detalle-label">Código:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.codigo)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Nombre:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.nombre)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Descripción:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.descripcion)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Precio Base:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.precio_base)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">IVA %:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.iva_porcentaje)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Categoría:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.categoria)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Stock:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.stock)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Estado:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.estado)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Fecha de Creación:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.fecha_creacion)</span>
            </div>

        </div>

        <!-- ACCIONES -->
        <div class="card-actions p-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a href="Index" class="btn btn-outline-ferreteria">Cancelar</a>
            }
        </div>

    </div>

</div>
