@model ferre2.Models.productos

@{
    ViewBag.Title = "Eliminar Producto";
}

<div class="productos-wrapper" style="max-width: 700px; margin: 0 auto;">

    <div class="productos-header-nuevo" style="background-color: #c0392b;">
        <div class="header-title">
            <h2 style="color: white;">⚠️ Confirmar Eliminación</h2>
        </div>
        @Html.ActionLink("← Cancelar", "Index", null, new { @class = "btn-outline-ferreteria", @style = "color: white; border-color: white;" })
    </div>

    <div class="card-producto-nuevo" style="padding: 30px; border-top: 5px solid #c0392b;">

        <div style="text-align: center; margin-bottom: 25px;">
            <h3 style="color: #2c3e50; margin-bottom: 10px;">¿Está seguro de eliminar este producto?</h3>
            <p style="color: #7f8c8d;">Esta acción es permanente y afectará los registros de inventario.</p>
        </div>

        <div style="background: #fdf2f2; border-radius: 8px; padding: 20px; display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
            <div>
                <small style="text-transform: uppercase; color: #95a5a6; font-weight: bold;">Producto</small>
                <p style="font-size: 1.2em; font-weight: bold; color: #c0392b; margin: 0;">@Model.nombre</p>
            </div>
            <div>
                <small style="text-transform: uppercase; color: #95a5a6; font-weight: bold;">Código de Ref.</small>
                <p style="font-size: 1.2em; margin: 0;">#@Model.codigo</p>
            </div>
            <div>
                <small style="text-transform: uppercase; color: #95a5a6; font-weight: bold;">Categoría</small>
                <p style="margin: 0;">@Model.categoria</p>
            </div>
            <div>
                <small style="text-transform: uppercase; color: #95a5a6; font-weight: bold;">Stock Actual</small>
                <p style="margin: 0;">@Model.stock unidades</p>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.id_producto)

            <div style="margin-top: 30px; display: flex; flex-direction: column; gap: 10px;">
                <button type="submit" class="btn-ferreteria" style="background-color: #e74c3c; width: 100%; padding: 15px; font-weight: bold;">
                    🗑️ SÍ, ELIMINAR DEFINITIVAMENTE
                </button>
                <a href="@Url.Action("Index")" style="text-align: center; color: #7f8c8d; text-decoration: none; padding: 10px;">
                    No deseo eliminarlo, regresar al listado
                </a>
            </div>
        }
    </div>
</div>