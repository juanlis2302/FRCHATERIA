@model ferre2.Models.productos

@{
    ViewBag.Title = "Detalles del Producto";
}

<div class="productos-wrapper" style="max-width: 850px;">

    <div class="productos-header-nuevo">
        <div class="header-title">
            <h2>Ficha del Producto</h2>
        </div>
        <div style="display: flex; gap: 10px;">
            @Html.ActionLink("✏️ Editar", "Edit", new { id = Model.id_producto }, new { @class = "btn-ferreteria", @style = "text-decoration:none; background-color: #2c3e50;" })
            @Html.ActionLink("← Volver", "Index", null, new { @class = "btn-outline-ferreteria", @style = "text-decoration:none;" })
        </div>
    </div>

    <div class="card-producto-nuevo" style="padding: 30px;">

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">

            <div>
                <h4 style="border-bottom: 2px solid #e67e22; padding-bottom: 5px; color: #d35400;">📦 Identificación</h4>
                <div style="margin-top: 15px;">
                    <p><strong>Código / Ref:</strong> <br /> <span style="font-size: 1.1em;"># @Model.codigo</span></p>
                    <p><strong>Nombre:</strong> <br /> <span style="font-size: 1.2em; font-weight: bold; color: #2c3e50;">@Model.nombre</span></p>
                    <p><strong>Categoría:</strong> <br /> <span class="badge-categoria">@Model.categoria</span></p>
                </div>
            </div>

            <div>
                <h4 style="border-bottom: 2px solid #e67e22; padding-bottom: 5px; color: #d35400;">💰 Valores y Stock</h4>
                <div style="margin-top: 15px;">
                    <p><strong>Precio Base:</strong> <br /> <span style="font-size: 1.1em;">$ @string.Format("{0:N2}", Model.precio_base)</span></p>
                    <p><strong>Impuesto (IVA):</strong> <br /> <span>@Model.iva_porcentaje %</span></p>
                    <p>
                        <strong>Stock Disponible:</strong> <br />
                        <span style="font-size: 1.1em; font-weight: bold; color: @(Model.stock < 5 ? "#e74c3c" : "#27ae60")">
                            @Model.stock unidades
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <hr style="border: 0; border-top: 1px solid #eee; margin: 20px 0;" />

        <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 30px;">
            <div>
                <p><strong>Descripción:</strong></p>
                <p style="background: #f9f9f9; padding: 15px; border-radius: 8px; font-style: italic; border-left: 4px solid #bdc3c7;">
                    "@(string.IsNullOrEmpty(Model.descripcion) ? "Sin descripción disponible" : Model.descripcion)"
                </p>
            </div>
            <div>
                <p><strong>Estado:</strong> <br /> <span>@Model.estado</span></p>
                <p><strong>Fecha de Creación:</strong> <br /> <span>@Model.fecha_creacion.ToShortDateString()</span></p>
            </div>
        </div>

    </div>
</div>