@model ferre2.Models.productos

@{
    ViewBag.Title = "Editar Producto";
}

<div class="productos-wrapper" style="max-width: 850px;">
    <div class="productos-header-nuevo">
        <div class="header-title">
            <h2>Editar Producto</h2>
        </div>
        @Html.ActionLink("← Volver", "Index", null, new { @class = "btn-outline-ferreteria", @style = "text-decoration:none;" })
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id_producto)

        <div class="card-producto-nuevo" style="padding: 30px; display: flex; flex-direction: column; gap: 20px;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 20px;">
                <div class="form-item">
                    <label>Código / Ref.</label>
                    @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                    @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })
                </div>
                <div class="form-item">
                    <label>Nombre del Producto</label>
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-item">
                <label>Descripción</label>
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px;">
                <div class="form-item">
                    <label>Precio Base</label>
                    @Html.EditorFor(model => model.precio_base, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
                    @Html.ValidationMessageFor(model => model.precio_base, "", new { @class = "text-danger" })
                </div>
                <div class="form-item">
                    <label>IVA (%)</label>
                    <select class="form-control" name="iva_porcentaje">
                        @for (int i = 0; i <= 19; i++)
                        {
                            <option value="@i" @(Model.iva_porcentaje == i ? "selected" : "")>@i%</option>
                        }
                    </select>
                </div>
                <div class="form-item">
                    <label>Categoría</label>
                    <select class="form-control" name="categoria">
                        <option value="Ferretería General" @(Model.categoria == "Ferretería General" ? "selected" : "")>Ferretería General</option>
                        <option value="Herramientas Manuales" @(Model.categoria == "Herramientas Manuales" ? "selected" : "")>Herramientas Manuales</option>
                        <option value="Eléctricos" @(Model.categoria == "Eléctricos" ? "selected" : "")>Eléctricos</option>
                        <option value="Plomería" @(Model.categoria == "Plomería" ? "selected" : "")>Plomería</option>
                        <option value="Pinturas" @(Model.categoria == "Pinturas" ? "selected" : "")>Pinturas</option>
                        <option value="Seguridad" @(Model.categoria == "Seguridad" ? "selected" : "")>Seguridad</option>
                    </select>
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr 1.5fr; gap: 20px;">
                <div class="form-item">
                    <label>Stock Actual</label>
                    @Html.EditorFor(model => model.stock, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-item">
                    <label>Estado</label>
                    @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-item">
                    <label>Fecha de Registro</label>
                    @Html.TextBoxFor(model => model.fecha_creacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
            </div>

            <div style="margin-top: 20px; text-align: right;">
                <input type="submit" value="💾 Guardar cambios" class="btn-ferreteria" style="width: 100%; padding: 12px; cursor: pointer;" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}