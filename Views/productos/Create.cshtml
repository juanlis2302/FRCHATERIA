@model ferre2.Models.productos

@{
    ViewBag.Title = "Create";
}

<div class="productos-wrapper">

    <!-- HEADER -->
    <div class="productos-header-nuevo">
        <div class="header-title">
            <h2>Crear Producto</h2>
        </div>
        <div>
            @Html.ActionLink("← Volver", "Index", null, new { @class = "btn btn-outline-ferreteria" })
        </div>
    </div>

    <!-- FORMULARIO -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card-producto-nuevo">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- CÓDIGO -->
            <div class="form-item">
                @Html.LabelFor(model => model.codigo)
                @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })
            </div>

            <!-- NOMBRE -->
            <div class="form-item">
                @Html.LabelFor(model => model.nombre)
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>

            <!-- DESCRIPCIÓN -->
            <div class="form-item">
                @Html.LabelFor(model => model.descripcion)
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>

            <!-- PRECIO BASE -->
            <div class="form-item">
                @Html.LabelFor(model => model.precio_base)
                @Html.EditorFor(model => model.precio_base, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01", min = "0" } })
                @Html.ValidationMessageFor(model => model.precio_base, "", new { @class = "text-danger" })
            </div>

            <!-- IVA (%) DESPLEGABLE -->
            <div class="form-item">
                @Html.LabelFor(model => model.iva_porcentaje)
                <select id="iva_porcentaje" name="iva_porcentaje" class="form-control">
                    @for (var i = 0; i <= 19; i++)
                    {
                        <option value="@i">@i%</option>
                    }
                </select>
                <div class="text-danger"></div>
            </div>

            <!-- CATEGORÍA DESPLEGABLE -->
            <div class="form-item">
                @Html.LabelFor(model => model.categoria)
                <select id="categoria" name="categoria" class="form-control">
                    <option value="">-- Seleccione categoría --</option>
                    <option value="Tornilleria">Tornillería</option>
                    <option value="HerramientasManual">Herramientas Manuales</option>
                    <option value="HerramientasElectrica">Herramientas Eléctricas</option>
                    <option value="PinturasBarnices">Pinturas y Barnices</option>
                    <option value="MaterialesConstruccion">Materiales de Construcción</option>
                    <option value="Electricidad">Electricidad</option>
                    <option value="Plomeria">Plomería</option>
                    <option value="Jardineria">Jardinería</option>
                </select>
                <div class="text-danger"></div>
            </div>

            <!-- STOCK -->
            <div class="form-item">
                @Html.LabelFor(model => model.stock)
                @Html.EditorFor(model => model.stock, new { htmlAttributes = new { @class = "form-control", type="number", min="0", step="1" } })
                @Html.ValidationMessageFor(model => model.stock, "", new { @class = "text-danger" })
            </div>

            <!-- ESTADO -->
            <div class="form-item">
                @Html.LabelFor(model => model.estado)
                @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
            </div>

            <!-- FECHA DE CREACIÓN -->
            <div class="form-item">
                @Html.LabelFor(model => model.fecha_creacion)
                @Html.EditorFor(model => model.fecha_creacion, new { htmlAttributes = new { @class = "form-control", type="date" } })
                @Html.ValidationMessageFor(model => model.fecha_creacion, "", new { @class = "text-danger" })
            </div>

            <!-- BOTÓN CREAR -->
            <div class="form-item mt-3">
                <input type="submit" value="Crear Producto" class="btn btn-ferreteria" />
            </div>

        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
