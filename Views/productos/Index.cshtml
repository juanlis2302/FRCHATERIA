@model IEnumerable<ferre2.Models.productos>

<div class="productos-wrapper">

    <!-- HEADER -->
    <div class="productos-header-nuevo">
        <h2>Productos</h2>
        @Html.ActionLink(
                 "➕ Nuevo Producto",
                 "Create",
                 null,
                 new { @class = "btn btn-ferreteria btn-agregar-producto" }
             )
    </div>

    <!-- GRID DE PRODUCTOS -->
    <div class="productos-grid-nuevo">
        @foreach (var item in Model)
        {
            <div class="card-producto-nuevo">

                <!-- Nombre del producto -->
                <h3>@item.nombre</h3>

                <!-- Información del producto -->
                <div class="producto-info-nuevo">
                    <span><label>Código:</label> @item.codigo</span>
                    <span><label>Descripción:</label> @item.descripcion</span>
                    <span><label>Precio:</label> @item.precio_base</span>
                    <span><label>IVA:</label> @item.iva_porcentaje%</span>
                    <span><label>Stock:</label> @item.stock</span>
                    <span><label>Estado:</label> @item.estado</span>
                    <span><label>Categoría:</label> @item.categoria</span>
                </div>

                <!-- Botones -->
                <div class="card-buttons-nuevo">
                    <a href="@Url.Action("Edit", new { id = item.id_producto })" class="btn btn-producto-accion btn-edit-nuevo">✏️ Editar</a>
                    <a href="@Url.Action("Details", new { id = item.id_producto })" class="btn btn-producto-accion btn-view-nuevo">👁️ Ver</a>
                    <a href="@Url.Action("Delete", new { id = item.id_producto })" class="btn btn-producto-accion btn-delete-nuevo">🗑️ Eliminar</a>
                </div>

            </div>
        }
    </div>

</div>