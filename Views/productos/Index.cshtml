@model IEnumerable<ferre2.Models.productos>

<div class="productos-wrapper">
    <div class="productos-segmento">
        <div class="productos-header-nuevo">
            <h2 class="header-title">Productos</h2>
            <button class="btn-agregar-producto">@Html.ActionLink("➕ Nuevo Producto", "Create", null, new { @class = "btn btn-ferreteria" })</button>


            <!-- GRID DE PRODUCTOS -->
            <div class="productos-grid-nuevo">
                @foreach (var item in Model)
                {
                    <div class="card-producto-nuevo p-4">

                        <h3>@item.nombre</h3>

                        <div class="producto-info-nuevo">
                            <div><label>Código:</label> @item.codigo</div>
                            <div><label>Descripción:</label> @item.descripcion</div>
                            <div><label>Precio:</label> @item.precio_base</div>
                            <div><label>IVA:</label> @item.iva_porcentaje%</div>
                            <div><label>Stock:</label> @item.stock</div>
                            <div><label>Estado:</label> @item.estado</div>
                            <div><label>Categoría:</label> @item.categoria</div>
                        </div>

                        <div class="card-buttons-nuevo mt-3">
                            <a href="@Url.Action("Edit", new { id = item.id_producto })" class="btn btn-ferreteria btn-edit-nuevo">✏️ Editar</a>
                            <a href="@Url.Action("Details", new { id = item.id_producto })" class="btn btn-outline-ferreteria btn-view-nuevo">👁️ Ver</a>
                            <a href="@Url.Action("Delete", new { id = item.id_producto })" class="btn btn-danger btn-delete-nuevo">🗑️ Eliminar</a>

                        </div>

                    </div>
                }
            </div>

        </div>
    </div>
    
</div>
