@model IEnumerable<ferre2.Models.productos>

<div class="productos-wrapper">

    <div class="productos-header-nuevo">
        <div class="header-title">
            <h2>Productos</h2>
        </div>
        <p class="btn-agregar-producto">
            @Html.ActionLink("➕ Nuevo Producto", "Create")
        </p>
    </div>

    <div class="productos-grid-nuevo">
        @foreach (var item in Model)
        {
            <div class="card-producto-nuevo">
                <h3>@item.nombre</h3>
                <div class="producto-info-nuevo">
                    <span><label>Código:</label> @item.codigo</span>
                    <span><label>Descripción:</label> @item.descripcion</span>
                    <span><label>Precio:</label> @item.precio_base</span>
                    <span><label>IVA:</label> @item.iva_porcentaje%</span>
                    <span><label>Stock:</label> @item.stock</span>
                    <span><label>Estado:</label> @item.estado</span>
                    <span><label>Categoría:</label> @item.categoria</span>
                </div>
                <div class="card-buttons-nuevo">
                    <button class="btn-producto-accion btn-edit-nuevo">✏️ Editar</button>
                    <button class="btn-producto-accion btn-view-nuevo">👁️ Ver</button>
                    <button class="btn-producto-accion btn-delete-nuevo">🗑️ Eliminar</button>
                </div>
            </div>
        }
    </div>

</div>
