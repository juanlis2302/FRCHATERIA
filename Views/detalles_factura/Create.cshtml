@model ferre2.Models.detalles_factura

@{
    ViewBag.Title = "Create";
}

<div class="main-container">

    <div class="table-card">

        <!-- HEADER -->
        <div class="section-header">
            <div class="header-title">
                <h2>Crear Detalle de Factura</h2>
            </div>
            <div>
                @Html.ActionLink("← Volver", "Index", null, new { @class = "btn btn-outline-ferreteria" })
            </div>
        </div>

        <!-- FORMULARIO -->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="card-content p-4">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-item">
                    @Html.LabelFor(model => model.id_factura, "Factura")
                    @Html.DropDownList("id_factura", null, "Selecciona una factura", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_factura, "", new { @class = "text-danger" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(model => model.id_producto, "Producto")
                    @Html.DropDownList("id_producto", null, "Selecciona un producto", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_producto, "", new { @class = "text-danger" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(model => model.descripcion)
                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(model => model.cantidad)
                    @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(model => model.precio_unitario)
                    @Html.EditorFor(model => model.precio_unitario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.precio_unitario, "", new { @class = "text-danger" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(model => model.descuento_porcentaje)
                    @Html.EditorFor(model => model.descuento_porcentaje, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.descuento_porcentaje, "", new { @class = "text-danger" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(model => model.descuento_valor)
                    @Html.EditorFor(model => model.descuento_valor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.descuento_valor, "", new { @class = "text-danger" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(model => model.iva_porcentaje)
                    @Html.EditorFor(model => model.iva_porcentaje, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.iva_porcentaje, "", new { @class = "text-danger" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(model => model.iva_valor)
                    @Html.EditorFor(model => model.iva_valor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.iva_valor, "", new { @class = "text-danger" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(model => model.subtotal)
                    @Html.EditorFor(model => model.subtotal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.subtotal, "", new { @class = "text-danger" })
                </div>

                <div class="form-item">
                    @Html.LabelFor(model => model.total_linea)
                    @Html.EditorFor(model => model.total_linea, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.total_linea, "", new { @class = "text-danger" })
                </div>

                <!-- BOTÓN CREAR -->
                <div class="form-item mt-3">
                    <input type="submit" value="Crear Detalle" class="btn btn-ferreteria" />
                </div>
            </div>
        }

    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
