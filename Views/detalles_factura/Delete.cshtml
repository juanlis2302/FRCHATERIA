@model ferre2.Models.detalles_factura

@{
    ViewBag.Title = "Delete";
}

<div class="main-container">

    <div class="table-card">

        <!-- HEADER -->
        <div class="section-header">
            <div class="header-title">
                <h2>Eliminar Detalle de Factura</h2>
            </div>
            <div>
                <a href="Index" class="btn btn-outline-ferreteria">← Volver</a>
            </div>
        </div>

        <!-- DETALLES -->
        <div class="card-content p-4">

            <div class="detalle-item">
                <span class="detalle-label">Descripción:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.descripcion)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Cantidad:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.cantidad)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Precio Unitario:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.precio_unitario)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Descuento %:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.descuento_porcentaje)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Descuento Valor:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.descuento_valor)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">IVA %:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.iva_porcentaje)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">IVA Valor:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.iva_valor)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Subtotal:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.subtotal)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Total Línea:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.total_linea)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Factura:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.facturas.numero_factura)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Producto:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.productos.codigo)</span>
            </div>

        </div>

        <!-- ACCIONES -->
        <div class="card-actions p-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a href="Index" class="btn btn-outline-ferreteria">Cancelar</a>
            }
        </div>

    </div>

</div>
