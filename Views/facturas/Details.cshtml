@model ferre2.Models.facturas

@{
    ViewBag.Title = "Details";
}

<div class="main-container">

    <div class="table-card">

        <!-- HEADER -->
        <div class="section-header">
            <div class="header-title">
                <h2>Detalles de la Factura</h2>
            </div>
            <div>
                <p>
                    @Html.ActionLink("✏️ Editar", "Edit", new { id = Model.id_factura }, new { @class = "btn btn-sm btn-outline-ferreteria" })
                    @Html.ActionLink("← Volver", "Index", null, new { @class = "btn btn-outline-secondary" })
                </p>
                <a href="Index" class="btn btn-outline-ferreteria">← Volver</a>
            </div>
        </div>

        <!-- DETALLES -->
        <div class="card-content p-4 form-ferreteria">

            <div class="detalle-item">
                <span class="detalle-label">Número de Factura:</span>
                <span class="detalle-value">@Model.numero_factura</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Fecha de Emisión:</span>
                <span class="detalle-value">@Model.fecha_emision</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Fecha de Vencimiento:</span>
                <span class="detalle-value">@Model.fecha_vencimiento</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Subtotal:</span>
                <span class="detalle-value">@Model.subtotal</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Total Impuestos:</span>
                <span class="detalle-value">@Model.total_impuestos</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Total Descuentos:</span>
                <span class="detalle-value">@Model.total_descuentos</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Total:</span>
                <span class="detalle-value">@Model.total</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Estado:</span>
                <span class="detalle-value">@Model.estado</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Método de Pago:</span>
                <span class="detalle-value">@Model.metodo_pago</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Notas:</span>
                <span class="detalle-value">@Model.notas</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Fecha de Creación:</span>
                <span class="detalle-value">@Model.fecha_creacion</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Fecha de Modificación:</span>
                <span class="detalle-value">@Model.fecha_modificacion</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Cliente:</span>
                <span class="detalle-value">@Model.clientes.nombre_razon_social</span>
            </div>

        </div>

    </div>

</div>
