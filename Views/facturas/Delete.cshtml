@model ferre2.Models.facturas

@{
    ViewBag.Title = "Eliminar Factura";
}

<div class="productos-wrapper" style="max-width: 850px; margin: auto;">

    <div class="productos-header-nuevo">
        <div class="header-title">
            <h2 style="margin:0; color: #c0392b;">⚠️ ¿Eliminar esta Factura?</h2>
        </div>
        @Html.ActionLink("← Volver", "Index", null, new { @class = "btn-outline-ferreteria", @style = "text-decoration:none;" })
    </div>

    <div class="card-producto-nuevo" style="padding: 30px; border-top: 5px solid #e74c3c;">
        
        <p style="color: #7f8c8d; margin-bottom: 25px;">Confirme si desea eliminar permanentemente este registro:</p>

        <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 20px; margin-bottom: 20px;">
            <div class="form-item">
                <label style="display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;">N° de Factura</label>
                <div class="form-control" style="background:#f8f9fa; height:auto;"># @Html.DisplayFor(model => model.numero_factura)</div>
            </div>
            <div class="form-item">
                <label style="display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;">Cliente</label>
                <div class="form-control" style="background:#f8f9fa; height:auto;">@Html.DisplayFor(model => model.clientes.nombre_razon_social)</div>
            </div>
        </div>

        <div class="form-item" style="margin-bottom: 20px;">
            <label style="display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;">Notas / Observaciones</label>
            <div class="form-control" style="background:#f8f9fa; height:auto; min-height:38px;">
                @Html.DisplayFor(model => model.notas)
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px; margin-bottom: 20px;">
            <div class="form-item">
                <label style="display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;">Subtotal</label>
                <div class="form-control" style="background:#f8f9fa;">@Html.DisplayFor(model => model.subtotal)</div>
            </div>
            <div class="form-item">
                <label style="display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;">Impuestos</label>
                <div class="form-control" style="background:#f8f9fa;">@Html.DisplayFor(model => model.total_impuestos)</div>
            </div>
            <div class="form-item">
                <label style="display:block; font-weight:bold; color:#c0392b; margin-bottom:5px;">Total a Eliminar</label>
                <div class="form-control" style="background:#fdf2f2; border-color:#e74c3c; font-weight:bold;">@Html.DisplayFor(model => model.total)</div>
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr 1.5fr; gap: 20px; margin-bottom: 20px;">
            <div class="form-item">
                <label style="display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;">Estado</label>
                <div class="form-control" style="background:#f8f9fa;">@Html.DisplayFor(model => model.estado)</div>
            </div>
            <div class="form-item">
                <label style="display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;">Método</label>
                <div class="form-control" style="background:#f8f9fa;">@Html.DisplayFor(model => model.metodo_pago)</div>
            </div>
            <div class="form-item">
                <label style="display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;">Fecha Emisión</label>
                <div class="form-control" style="background:#f8f9fa;">@Html.DisplayFor(model => model.fecha_emision)</div>
            </div>
        </div>

        <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid #eee; text-align: center;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div style="display: flex; gap: 15px; justify-content: center;">
                    <button type="submit" class="btn-ferreteria" style="background-color: #e74c3c; padding: 12px 40px; border: none; cursor: pointer;">
                        🗑️ Confirmar Eliminación
                    </button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn-outline-ferreteria", @style = "padding: 12px 40px; text-decoration:none;" })
                </div>
            }
        </div>
    </div>
</div>