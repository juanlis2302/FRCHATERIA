@model ferre2.Models.facturas

@{
    ViewBag.Title = "Delete";
}

<div class="main-container">

    <div class="table-card">

        <!-- HEADER -->
        <div class="section-header">
            <div class="header-title">
                <h2>Eliminar Factura</h2>
            </div>
            <div>
                <a href="Index" class="btn btn-outline-ferreteria">← Volver</a>
            </div>
        </div>

        <!-- DETALLES -->
        <div class="card-content p-4 form-ferreteria">

            <div class="detalle-item">
                <span class="detalle-label">Número Factura:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.numero_factura)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Fecha Emisión:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.fecha_emision)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Fecha Vencimiento:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.fecha_vencimiento)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Subtotal:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.subtotal)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Total Impuestos:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.total_impuestos)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Total Descuentos:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.total_descuentos)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Total:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.total)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Estado:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.estado)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Método de Pago:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.metodo_pago)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Notas:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.notas)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Fecha Creación:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.fecha_creacion)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Fecha Modificación:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.fecha_modificacion)</span>
            </div>

            <div class="detalle-item">
                <span class="detalle-label">Cliente:</span>
                <span class="detalle-value">@Html.DisplayFor(model => model.clientes.nombre_razon_social)</span>
            </div>

        </div>

        <!-- ACCIONES -->
        <div class="card-actions p-4 text-end">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a href="Index" class="btn btn-outline-ferreteria">Cancelar</a>
            }
        </div>

    </div>

</div>
