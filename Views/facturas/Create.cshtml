@model ferre2.Models.facturas

@{
    ViewBag.Title = "Crear Factura";
}

<div class="productos-wrapper" style="max-width: 850px; margin: auto;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="productos-header-nuevo">
            <div class="header-title">
                <h2 style="margin:0;">Crear Nueva Factura</h2>
            </div>
            <div style="display: flex; gap: 10px;">
                <button type="submit" class="btn-ferreteria" style="border:none; cursor:pointer;">💾 Guardar Factura</button>
                @Html.ActionLink("← Volver", "Index", null, new { @class = "btn-outline-ferreteria", @style = "text-decoration:none;" })
            </div>
        </div>

        <div class="card-producto-nuevo" style="padding: 30px;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
                <div class="form-item">
                    @Html.LabelFor(model => model.numero_factura, "N° de Factura", new { @style = "display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;" })
                    @Html.EditorFor(model => model.numero_factura, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ej: FAC-001" } })
                    @Html.ValidationMessageFor(model => model.numero_factura, "", new { @class = "text-danger" })
                </div>
                <div class="form-item">
                    @Html.LabelFor(model => model.id_cliente, "Cliente", new { @style = "display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;" })
                    @Html.DropDownList("id_cliente", null, "Selecciona un cliente", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_cliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
                <div class="form-item">
                    @Html.LabelFor(model => model.fecha_emision, "Fecha de Emisión", new { @style = "display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;" })
                    @Html.EditorFor(model => model.fecha_emision, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.fecha_emision, "", new { @class = "text-danger" })
                </div>
                <div class="form-item">
                    @Html.LabelFor(model => model.fecha_vencimiento, "Vencimiento", new { @style = "display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;" })
                    @Html.EditorFor(model => model.fecha_vencimiento, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.fecha_vencimiento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px; margin-bottom: 20px;">
                <div class="form-item">
                    @Html.LabelFor(model => model.subtotal, new { @style = "display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;" })
                    @Html.EditorFor(model => model.subtotal, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
                    @Html.ValidationMessageFor(model => model.subtotal, "", new { @class = "text-danger" })
                </div>
                <div class="form-item">
                    @Html.LabelFor(model => model.total_impuestos, "Impuestos", new { @style = "display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;" })
                    @Html.EditorFor(model => model.total_impuestos, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
                    @Html.ValidationMessageFor(model => model.total_impuestos, "", new { @class = "text-danger" })
                </div>
                <div class="form-item">
                    @Html.LabelFor(model => model.total, new { @style = "display:block; font-weight:bold; color:#e67e22; margin-bottom:5px;" })
                    @Html.EditorFor(model => model.total, new { htmlAttributes = new { @class = "form-control", @style = "border-color:#e67e22;", type = "number", step = "0.01" } })
                    @Html.ValidationMessageFor(model => model.total, "", new { @class = "text-danger" })
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px; margin-bottom: 20px;">
                <div class="form-item">
                    @Html.LabelFor(model => model.estado, new { @style = "display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;" })
                    @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                </div>
                <div class="form-item">
                    @Html.LabelFor(model => model.metodo_pago, "Método Pago", new { @style = "display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;" })
                    @Html.EditorFor(model => model.metodo_pago, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.metodo_pago, "", new { @class = "text-danger" })
                </div>
                <div class="form-item">
                    @Html.LabelFor(model => model.total_descuentos, "Descuentos", new { @style = "display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;" })
                    @Html.EditorFor(model => model.total_descuentos, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
                    @Html.ValidationMessageFor(model => model.total_descuentos, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-item">
                @Html.LabelFor(model => model.notas, new { @style = "display:block; font-weight:bold; color:#7f8c8d; margin-bottom:5px;" })
                @Html.EditorFor(model => model.notas, new { htmlAttributes = new { @class = "form-control", @rows = "2" } })
                @Html.ValidationMessageFor(model => model.notas, "", new { @class = "text-danger" })
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-top: 20px; padding-top: 20px; border-top: 1px dashed #eee;">
                <div class="form-item">
                    @Html.LabelFor(model => model.fecha_creacion, "Fecha Registro", new { @style = "display:block; font-size: 0.85em; color:#bdc3c7;" })
                    @Html.EditorFor(model => model.fecha_creacion, new { htmlAttributes = new { @class = "form-control", type = "date", @style = "height: 30px; font-size: 0.9em;" } })
                </div>
                <div class="form-item">
                    @Html.LabelFor(model => model.fecha_modificacion, "Última Modif.", new { @style = "display:block; font-size: 0.85em; color:#bdc3c7;" })
                    @Html.EditorFor(model => model.fecha_modificacion, new { htmlAttributes = new { @class = "form-control", type = "date", @style = "height: 30px; font-size: 0.9em;" } })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}