@using ferre2.Models
@model LoginViewModel

@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Sistema Ferretería</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/Style.css" />
</head>
<body class="login-body-wrapper">

    <div class="login-card-container">
        <div class="text-center mb-2" style="font-size: 2.5rem;">🛠️</div>
        <h2 class="login-header-title">Ferretería</h2>
        <p class="login-header-subtitle">Ingresa tus credenciales para continuar</p>

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "login-validation-error mb-3" })

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "login-form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "login-input-field", placeholder = "correo@ejemplo.com" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "login-validation-error" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(m => m.Password, "Contraseña", new { @class = "login-form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "login-input-field", placeholder = "••••••••" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "login-validation-error" })
            </div>

            <div class="mb-4 form-check">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                <label class="form-check-label" for="RememberMe" style="font-size: 0.9rem; color: #7f8c8d;">Recordarme en este equipo</label>
            </div>

            <button type="submit" class="login-btn-ferreteria">
                ACCEDER AL PANEL
            </button>

            <div class="login-footer-link">
                <span style="color: #95a5a6; font-size: 0.85rem;">¿Eres nuevo?</span><br />
                @Html.ActionLink("Crea una cuenta nueva", "Register", null, new { @class = "login-link-action" })
            </div>
        }
    </div>

    <script src="~/Scripts/jquery-3.7.0.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>