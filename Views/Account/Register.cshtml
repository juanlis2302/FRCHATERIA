@model ferre2.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

    <div class="login-card-container">
        <div class="text-center mb-2" style="font-size: 2.5rem;">📝</div>
        <h2 class="login-header-title">Registro</h2>
        <p class="login-header-subtitle">Crea una cuenta para el personal</p>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "login-validation-error" })

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "login-form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "login-input-field", placeholder = "correo@ferreteria.com" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "login-validation-error" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Password, "Contraseña", new { @class = "login-form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "login-input-field", placeholder = "Mínimo 6 caracteres" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "login-validation-error" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ConfirmPassword, "Confirmar Contraseña", new { @class = "login-form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "login-input-field", placeholder = "Repite tu contraseña" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "login-validation-error" })
            </div>

            <button type="submit" class="login-btn-ferreteria">
                Crear Cuenta
            </button>

            <div class="login-footer-link">
                <span style="color: #95a5a6; font-size: 0.85rem;">¿Ya tienes usuario?</span><br />
                @Html.ActionLink("Volver al Login", "Login", null, new { @class = "text-decoration-none", @style = "color:#e67e22; font-weight:bold;" })
            </div>
        }
    </div>

    <script src="~/Scripts/jquery-3.7.0.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>